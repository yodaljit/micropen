{
  "name": "micropen",
  "version": "1.0.4",
  "description": "A feather-light (< 1KB) SSR-compatible rich text editor with dynamic features",
  "main": "dist/editor.js",
  "module": "dist/editor.esm.js",
  "types": "dist/editor.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "dist/react",
    "dist/vue",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/editor.esm.js",
      "require": "./dist/editor.js",
      "types": "./dist/editor.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.esm.js",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./vue": {
      "import": "./dist/vue/index.esm.js",
      "require": "./dist/vue/index.js",
      "types": "./dist/vue/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "size": "size-limit",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write src",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^11.0.1",
    "terser": "^5.26.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "vue": "^3.4.0"
  },
  "dependencies": {},
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yodaljit/micropen.git"
  },
  "keywords": [
    "editor",
    "rich-text",
    "wysiwyg",
    "contenteditable",
    "lightweight",
    "ssr",
    "react",
    "vue",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yodaljit/micropen/issues"
  },
  "homepage": "https://github.com/yodaljit/micropen#readme"
}
